<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="plugin.video.tvtuga"
           name="TV Portuguesa"
           version="0.2.0"
           provider-name="bsan">
        <requires>
            <import addon="xbmc.python" version="2.1.0"/>
            <import addon="script.module.urlresolver" version="1.0.5"/>
            <import addon="script.module.requests"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Ver canais de TV portugueses e radios no XBMC</summary>
            <description>Ve os teus canais portugueses favoritos e ouve radios no XBMC.
                Visita os sites oficiais.
                www.desportogratis.com, www.rtp.pt, www.tugastream.com, www.tvfree.me, www.tvgente.eu, www.tvdez.com
            </description>
            <disclaimer>O autor deste addon NAO e responsavel pelo conteudo dos streams.</disclaimer>
            <platform>all</platform>
        </extension>
    </addon>

    <addon id="plugin.video.myaddon"
           name="Sparrow TV"
           version="0.0.2"
           provider-name="bsan">
        <requires>
            <import addon="xbmc.python" version="2.1.0"/>
            <import addon="script.module.pytz"/>
            <import addon="script.module.urlresolver" version="1.0.5"/>
            <import addon="script.module.requests"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary></summary>
            <description></description>
            <disclaimer></disclaimer>
            <platform>all</platform>
        </extension>
    </addon>

    <addon id="repository.kodi.caribbean" name="Caribbean repository" version="0.0.3" provider-name="bsan">
        <extension point="xbmc.addon.repository" name="Caribbean Add-on Repository">
            <info compressed="false">http://raw.github.com/brunosantos/Bsan-kodi-repo/master/addons.xml</info>
            <checksum>http://raw.github.com/brunosantos/Bsan-kodi-repo/master/addons.xml.md5</checksum>
            <datadir zip="true">http://raw.github.com/brunosantos/Bsan-kodi-repo/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
        <summary>Caribbean Addon</summary>
        <description>Stuff and things</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
